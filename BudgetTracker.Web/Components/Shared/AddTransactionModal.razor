@* Static modal markup controlled purely by JavaScript (openMorphModal / closeMorphModal).*@

<div id="morphModal" class="morph-modal" style="--origin-x: 0px; --origin-y: 0px;" onclick="closeMorphModal()">
    <div class="morph-scrim"></div>
    <div class="morph-sheet" onclick="event.stopPropagation()">
        <header class="morph-header">
            <h3>Add Transaction</h3>
            <button type="button" class="btn btn--outline btn--sm" onclick="closeMorphModal()">âœ•</button>
        </header>
        <section class="morph-content">
            <div class="form-field">
                <label class="form-label">Title</label>
                <input type="text" placeholder="e.g., Coffee" />
            </div>
            <div class="form-field">
                <label class="form-label">Amount</label>
                <input type="number" placeholder="e.g., 3.50" />
            </div>
            <div class="form-field">
                <label class="form-label">Category</label>
                <select>
                    <option>Dining</option>
                    <option>Groceries</option>
                    <option>Transport</option>
                    <option>Bills</option>
                </select>
            </div>
            <div style="display:flex; gap:12px; justify-content:flex-end; margin-top: 12px;">
                <button type="button" class="btn btn--outline btn--sm" onclick="closeMorphModal()">Cancel</button>
                <button type="button" class="btn btn--filled btn--sm" onclick="closeMorphModal()">Save</button>
            </div>
        </section>
    </div>
</div>
