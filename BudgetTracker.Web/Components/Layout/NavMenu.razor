@inject IJSRuntime JS

<div class="navbar-container">
    <!-- Desktop/Tablet Top Navigation -->
    <div class="nav-header desktop-nav">
        <div class="header-left">
            <span class="logo">💎</span>
            <h1 class="title">Financer</h1>
        </div>
        
        <nav class="nav-horizontal">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="nav-icon">🏠</span> Dashboard
            </NavLink>

            <NavLink class="nav-link" href="transactions">
                <span class="nav-icon">💳</span> Transactions
            </NavLink>

            <NavLink class="nav-link" href="categories">
                <span class="nav-icon">📊</span> Categories
            </NavLink>

            <NavLink class="nav-link" href="reports">
                <span class="nav-icon">📈</span> Reports
            </NavLink>
        </nav>
        
        <div class="header-right">
            <button class="btn btn--filled btn--sm" @onclick="OnAddTransaction" @ref="_addBtnRef">
                ➕ Add
            </button>
            <button class="settings-btn" @onclick="OnSettingsClick">
                ⚙️
            </button>
            <button class="profile-btn" @onclick="OnProfileClick">
                👤
            </button>
        </div>
    </div>
</div>

@* App-level modal host is mounted in App.razor. No local modal instance here. *@

@code {
    private ElementReference _addBtnRef;
    
    private async Task OnAddTransaction()
    {
        await JS.InvokeVoidAsync("openMorphModalFromElement", _addBtnRef);
    }
    private async Task OnSettingsClick()
    {
        // Navigate to settings page
        await Task.CompletedTask;
    }
    
    private async Task OnProfileClick()
    {
        // Navigate to profile or show profile modal
        await Task.CompletedTask;
    }
}