<div class="dashboard-header">
    <div class="header-left">
        <span class="logo">💎</span>
        <h1 class="title">Financer</h1>
    </div>
    <div class="header-right">
        <button class="settings-btn" @onclick="OnSettingsClick">
            ⚙️
        </button>
        <button class="profile-btn" @onclick="OnProfileClick">
            👤
        </button>
    </div>
</div>

@code {
    private async Task OnSettingsClick()
    {
        // Navigate to settings or show settings modal
        await Task.CompletedTask;
    }
    
    private async Task OnProfileClick()
    {
        // Navigate to profile or show profile modal
        await Task.CompletedTask;
    }
}
